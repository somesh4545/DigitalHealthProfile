<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/button_patient_hm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admit Patient"
        android:textAllCaps="false"
        android:background="@drawable/msg_background"
        android:padding="16sp"
        android:visibility="invisible"
        android:layout_margin="64sp"
        android:layout_gravity="start|center"/>

    <Button
        android:id="@+id/button_patient_list_hm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Patients List"
        android:layout_margin="64sp"
        android:visibility="invisible"
        android:background="@drawable/msg_background"
        android:padding="16sp"
        android:layout_gravity="center|end"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Log Out"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="@drawable/logout_bg"
        android:textAllCaps="false"
        android:onClick="logOut"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
